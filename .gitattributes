# Auto-detect text files and perform LF normalization
* text=auto

# Shell scripts must use LF (required for Docker/Linux)
*.sh text eol=lf
entrypoint.sh text eol=lf

# Dockerfile should use LF
Dockerfile text eol=lf
Dockerfile.* text eol=lf

# Docker Compose files
docker-compose.yml text eol=lf
docker-compose.*.yml text eol=lf
compose.yml text eol=lf
compose.*.yml text eol=lf

# Python files - cross-platform
*.py text diff=python
*.pyi text diff=python

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.cfg text
*.ini text
*.env text

# Jupyter notebooks
*.ipynb text

# Markdown and documentation
*.md text diff=markdown
*.txt text

# Keep Windows scripts with CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.whl binary

# Model files
*.bin binary
*.pt binary
*.pth binary
*.onnx binary
*.safetensors binary
